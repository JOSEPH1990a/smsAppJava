<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout android:background="@drawable/bg1" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="25sp" android:textStyle="normal|bold|italic" android:textColor="#ffffff" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Port Number:" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <EditText android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/portNumber" android:background="@drawable/rectange_shape" android:paddingLeft="5sp" android:paddingRight="5sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="8090" android:ems="10" android:singleLine="true" android:maxLength="4" android:layout_toRightOf="@+id/textView2" android:layout_alignTop="@+id/textView2" android:layout_alignBottom="@+id/textView2" android:layout_alignParentRight="true" android:inputType="number" android:layout_toEndOf="@+id/textView2" android:layout_alignParentEnd="true"/>
        <Switch android:textSize="20sp" android:textStyle="italic" android:textColor="#fff" android:id="@+id/getSMSAtURLSwitch" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="GET SMS at URL" android:layout_below="@+id/portNumber"/>
        <EditText android:enabled="false" android:textSize="20sp" android:id="@+id/getSMSAtURL" android:background="@drawable/rectange_shape" android:paddingLeft="5sp" android:paddingRight="5sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="http://192.168.1.102:8080/receiveSMS" android:layout_below="@+id/getSMSAtURLSwitch"/>
        <Switch android:textSize="20sp" android:textStyle="italic" android:textColor="#fff" android:id="@+id/noOfSMSPerMinutesSwitch" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="Outgoing No of SMS per minutes" android:layout_below="@+id/getSMSAtURL"/>
        <TextView android:textSize="20sp" android:textColor="#fff" android:id="@+id/noOfSMSText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Number of SMS" android:layout_below="@+id/noOfSMSPerMinutesSwitch"/>
        <EditText android:enabled="false" android:textSize="20sp" android:id="@+id/noOfSMS" android:background="@drawable/rectange_shape" android:paddingLeft="5sp" android:paddingRight="5sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="200" android:layout_below="@+id/noOfSMSText" android:inputType="number"/>
        <TextView android:textSize="20sp" android:textColor="#fff" android:id="@+id/noOfMinutesText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Number of Minutes" android:layout_weight="1" android:layout_below="@+id/noOfSMS"/>
        <EditText android:enabled="false" android:textSize="20sp" android:id="@+id/noOfMinutes" android:background="@drawable/rectange_shape" android:paddingLeft="5sp" android:paddingRight="5sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="15" android:layout_below="@+id/noOfMinutesText" android:inputType="number"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="60dp" android:weightSum="2" android:layout_alignParentBottom="true">
            <Button android:textColor="#fff" android:id="@+id/saveSettings" android:background="@drawable/rectange_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Save" android:layout_weight="1"/>
            <Button android:textColor="#fff" android:id="@+id/cancelSettingsButton" android:background="@drawable/rectange_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Cancel" android:layout_weight="1"/>
        </LinearLayout>
        <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="BANNER" app:adUnitId="@string/banner_ad_unit_id"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
